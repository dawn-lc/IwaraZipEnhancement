{
  "compilerOptions": {
    "target": "ES2021",
    "module": "System",
    "alwaysStrict": false,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "removeComments": true,
    "moduleResolution": "node",
    "newLine": "crlf",
    "outFile": "temp/main.js"
  },
  "include": [
    "utils/*.d.ts"
  ],
  "files": [
    "src/main.ts"
  ]
}
